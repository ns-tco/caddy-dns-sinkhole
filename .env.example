# Netskope API Configuration
# Copy this file to .env and fill in your actual credentials
# NEVER commit .env to version control

# Netskope API URL
API_URL=https://your-tenant.goskope.com/api/v2/nsiq/urllookup

# Netskope API Token (base64 encoded username:password)
# Generate with: echo -n "username:password" | base64
API_TOKEN=your_base64_encoded_token_here

# PKI Certificate Authority Configuration
# These values are used to generate the internal CA for TLS certificates
# Change these before first deployment to customize your CA

# CA identifier (used internally by Caddy, lowercase, no spaces)
CA_NAME=nskp

# CA display name (shown in certificates)
CA_DISPLAY_NAME=nskp.io

# Root CA Common Name
CA_ROOT_CN=nskp.io Root CA

# Intermediate CA Common Name
CA_INTERMEDIATE_CN=nskp.io Intermediate CA

# Public IP address for external access (optional, for documentation)
PUBLIC_IP=173.167.175.162
